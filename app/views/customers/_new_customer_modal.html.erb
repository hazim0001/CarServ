<!-- Modal -->
<div class="modal fade" id="newCustomerModal" tabindex="-1" aria-labelledby="newCustomerModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newCustomerModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class=" mt-4">
          <div class="row justify-content-center">
            <div class=" p-4 rounded-lg ">
              <h1 class="font-weight-bold">New customer</h1>
              <%= simple_form_for @new_customer, url: customers_path do |f| %>
                <%= f.input :name %>
                <%= f.input :phone_number %>
                <%= f.input :license_number %>
                <%= f.input :age %>
                <%= f.input :occupation %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
                <%= f.submit 'Add Customer', class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
