
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newCustomerModal">
  New Customer
</button>

<%= render 'customers/new_customer_modal' %>




<div class="container">
  <div class="card-product">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <div class="card-product-infos">
      <h2>Product name</h2>
      <p>Product description with <strong>relevant info</strong> only.</p>
    </div>
  </div>
</div>


<div class="container">
  <% @jobs.each do |job| %>
    <%= link_to job_path(job) do %>

        <div class="courses-container">
          <div class="course">
            <div class="course-preview">
              <h6>Job# <%= job.id %></h6>
              <h3><%=job.car_model%></h3>
              <!-- <a href="#">View all chapters <i class="fas fa-chevron-right"></i></a> -->
            </div>
            <div class="course-info">
              <div class="progress-container">
                <!-- <div class="progress"></div> -->
                <span class="progress-text">
                  <%= job.user.email %>
                </span>
              </div>
              <h6><%=job.problem%></h6>
              <h3><%= job.work_done_description %></h3>
              <button class="btn-new"><%= humanized_money_with_symbol(job.total_job) %></button>
            </div>
          </div>
        </div>


    <% end %>
  <% end %>
</div>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-5 bg-light p-4 rounded-lg">
      <h1 class="font-weight-bold">New Job</h1>
      <%= simple_form_for @new_job, url: jobs_path do |f| %>
        <%= f.input :car_model %>
        <%= f.input :mileage %>
        <%= f.input :problem %>
        <%= f.association :customer %>
        <%= f.submit 'Create Job', class: "btn btn-primary colored-btn" %>
      <% end %>
    </div>
  </div>
</div>



<style>
  .card-product {
    overflow: hidden;
    height: 120px;
    background: white;
    box-shadow: 0 0 15px rgba(0,0,0,0.2);
